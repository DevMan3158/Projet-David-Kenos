{% extends 'base.html.twig' %}

{% block title %}Chocolaterie index{% endblock %}

{% block body %}

<section>

    <h1 id="titleCrud">Gérer les chocolateries</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Lieu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chocolaterie in chocolateries %}
            <tr>

                <td>{{ chocolaterie.nom }}</td>
                <td>{{ chocolaterie.lieu }}</td>
                
                <td>

                        <a  href="{{ path('app_chocolaterie_show', {'id': chocolaterie.id}) }}">
                            <i class="fa-solid fa-eye"></i>
                        </a>

                    <button>
                        <a  href="{{ path('app_chocolaterie_edit', {'id': chocolaterie.id}) }}">
                            <i class="fa-solid fa-pen-to-square"></i>
                            Modifier
                        </a>
                    </button>

                        {{ include('admin/chocolaterie/_delete_form.html.twig') }}

                    

                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Aucune chocolaterie trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}
