{% extends 'admin_base.html.twig' %}

{% block title %}Chocolaterie index{% endblock %}

{% block body %}

<section>

    <div class="titleBurger">
        <i class="fa-solid fa-bars" onClick="openMenu2()" id="burger2"></i>
        <h1 id="titleCrud">Gérer les chocolateries</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Lieu</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chocolaterie in chocolateries %}
        
                <tr>

                <td data-label="Nom">{{ chocolaterie.nom }}</td>
                <td data-label="Lieu">{{ chocolaterie.lieu }}</td>
                <td data-label="Photo">
                    <img title="Chocolaterie" src="../../{{ chocolaterie.photo }}" alt="Les chocolateries affichés">
                </td>
                <td data-label="Gestion">

                        <a  href="{{ path('app_chocolaterie_show', {'id': chocolaterie.id}) }}">
                            <i class="fa-solid fa-eye"></i>
                        </a>

                    <button>
                        <a  href="{{ path('app_chocolaterie_edit', {'id': chocolaterie.id}) }}" class="editBtn">
                            <i class="fa-solid fa-pen-to-square"></i>
                            Modifier
                        </a>
                    </button>

                        {{ include('admin/chocolaterie/_delete_form.html.twig') }}

                    

                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Aucune chocolaterie trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'pagination.html.twig' %}

    <button class="btn-add"><a href="{{ path('app_chocolaterie_new') }}">Ajoutez une chocolaterie</a></button>

</section>
{% endblock %}
